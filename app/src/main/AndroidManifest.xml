<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carbajal.danniel.ioapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.OutputActivities.ResultActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.CustomPopUp"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.OutputActivities.ResultTransporteActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.CustomPopUp"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.OutputActivities.ResultGraficoActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.CustomPopUp"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.InputActivities.SimplexInputActivity"
            android:windowSoftInputMode="stateUnchanged|adjustResize"
            android:theme="@style/AppTheme.CustomPopUp"
            />
        <activity android:name=".activities.InputActivities.GraficoInputActivity"
            android:windowSoftInputMode="stateUnchanged|adjustResize"
            android:theme="@style/AppTheme.CustomPopUp"
            />
        <activity android:name=".activities.InputActivities.TransportInputActivity"
            android:windowSoftInputMode="stateUnchanged|adjustResize"
            android:theme="@style/AppTheme.CustomPopUp"
            ></activity>
    </application>

</manifest>